// #shader_type vertex

#version 330

/* *********************************************************************************************** */

#include(../include/position_shader_program_interface.glsl)

/* *********************************************************************************************** */

uniform vec3 colour = vec3(1, 1, 1);

/* *********************************************************************************************** */

out VertexAttributesIn
{
  vec2 position;
  vec4 colour;
} vertexIn;

/* *********************************************************************************************** */

void main()
{
  vertexIn.position = position;
  vertexIn.colour = vec4(colour, 1);
}

