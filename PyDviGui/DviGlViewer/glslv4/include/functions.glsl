vec2 middle(vec2 p1, vec2 p2)
{
  return .5 * (p1 + p2);
}

vec2 mirror_x(vec2 v)
{
  return vec2(-v.x, v.y);
}

vec2 mirror_y(vec2 v)
{
  return vec2(v.x, -v.y);
}

