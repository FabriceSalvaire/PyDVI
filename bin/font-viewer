####################################################################################################

import argparse
import sys

from PyQt4 import QtGui, QtCore

####################################################################################################

import PyDvi.Logging.Logging as Logging
logger = Logging.setup_logging()

####################################################################################################

from PyDviGui.FontViewer.MainWindow import MainWindow

####################################################################################################
#
# Options
#

parser = argparse.ArgumentParser(description='TeX Font Viewer')

parser.add_argument('font_name', metavar='FontName',
                    help='Font Name')

args = parser.parse_args()

####################################################################################################

class Application(QtGui.QApplication):

    ###############################################

    def __init__(self, args):

        super(Application, self).__init__(sys.argv)

        self._main_window = MainWindow(self, args)
        self._main_window.show()

####################################################################################################

application = Application(args)
application.exec_()

####################################################################################################
#
# End
#
####################################################################################################
